

<div class= "down col-md-4 col-md-offset-4" >

  <h1>Edit Book "<%=@book.title%>":</h1>

  <% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
      <%= flash[:notice] %><br>
    </div>
  <% end %>


  <% if flash[:errors] %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
      <% flash[:errors].each do |message| %>
    	  <%= message %>. <br>
    	<% end %>
    </div>
  <% end %>


<div class="row">
  <form method="post" action="/books/<%=@book.id%>" class="boundary edit-form  form" ><%=  %>
    <input id="hidden" type="hidden" name="_method" value="patch" />
    <div class="form-group">
      <label for="review" class="left-label" ><p class="text-left">Review:</p></label>
      <textarea id='review' name="content" class="form-control" rows="10"><%=@review ? @review.content : ""%></textarea>
    </div>


    <div class="form-group">
      <label for="other-category" class="left-label"> Categories by all readers: </label>
      <input id="other-category" class="form-control" value= "<%=@all_categories%>" disabled>
    </div>

    <div class="form-group">
      <label for="all-reader" class="left-label">Categories by you:</label>
      <input class="form-control" id= "all-reader" type="text" name="category" value=<%=@reader_categories%>>
    </div>

    <div class="form-group" >
      <label for="own-category" class="left-label">Rating:</label>

          <input id= "own-category" class="form-control" type="number" min="0" max="10" step="1" name="rating"  value=<%=@review ? @review.rating : ""%>>
        </div>

          <input type="submit" class="btn btn-lg btn-primary" value="Submit"/>

      </div>



  <br>
  <br>
  <br>

  <div class= 'registration'>
    <p class="lead">
      <a href="/books" class="btn btn-lg btn-default">Back to reading list</a>
      <a href="/logout" class="btn btn-lg btn-default">Log out</a>
    </p>
  </div>
</div>
